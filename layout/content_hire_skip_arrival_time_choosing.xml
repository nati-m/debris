<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HireSkipArrivalTimeChoosingActivity"
    android:background="@color/background"
    tools:showIn="@layout/activity_hire_skip_arrival_time_choosing">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_choose_time_skip_arrival"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_margin="32dp"/>

    <TextView
        android:layout_above="@id/button_continue_with_no_pick_up_time_choose_arrival_time_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optional: You can choose the collection date, when your full skips will be taken away, now if you like. If not, simply click below"
        android:layout_margin="32dp"/>

    <Button
        android:id="@+id/button_continue_with_no_pick_up_time_choose_arrival_time_activity"
        android:background="@color/softerAmber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"
        android:text="Continue"/>

</RelativeLayout>