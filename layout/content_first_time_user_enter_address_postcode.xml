<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FirstTimeUserEnterAddressPostcode"
    tools:showIn="@layout/activity_first_time_user_enter_address_postcode"
    android:background="@color/background">

    <ImageView
        android:id="@+id/skip_icon_enter_postcode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/skipicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HeaderText"
        android:text="Welcome"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/skip_icon_enter_postcode"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/skip_icon_enter_postcode"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:text="Please enter your Address And Postcode to begin:"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/enter_address_line_1_first_time_user_enter_address_postcode"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@id/skip_icon_enter_postcode"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/enter_address_line_2_first_time_user_enter_address_postcode"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/skip_icon_enter_postcode"
        android:layout_marginTop="168dp"/>

    <EditText
        android:id="@+id/enter_postcode_first_time_user_enter_address_postcode"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Postcode"
        android:layout_below="@id/skip_icon_enter_postcode"
        android:layout_marginTop="216dp"/>

    <Button
        android:id="@+id/go_button_first_time_user_enter_address_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/YellowButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:text="GO"/>

</RelativeLayout>