<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.debris1_1.FrontPageLoggedInActivity"
    tools:showIn="@layout/activity_front_page_logged_in"
    android:orientation="vertical"
    android:background="@color/background">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/skipicon"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/welcome_user_name_front_page_logged_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, USER"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/black"
        android:text="The service to hire skips straight from your phone"
        />

    <Button
        style="@style/YellowButton"
        android:id="@+id/hire_button_front_page"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_fab_margin"
        android:layout_marginRight="@dimen/big_fab_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Hire A Skip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        style="@style/YellowButton"
        android:id="@+id/track_button_front_page"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="Track"/>

        <Button
            android:id="@+id/settings_button_front_page_logged_in"
            style="@style/YellowButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Settings"/>

        <Button
            android:id="@+id/points_button_front_page_logged_in"
            style="@style/YellowButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:text="Points"/>

    </LinearLayout>









        <!--"In this space could be a summary of the user's orders, news,
        offers, and any other relevant things-->

        <TextView
            android:id="@+id/points_text_view_front_page_logged_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/greenConfirm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="points"
            />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP"
            android:id="@+id/TEMPBUTTON"/>


    </LinearLayout>
