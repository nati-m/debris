<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HireOptionalChooseCollectionDateActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/skip_arriving_message_hire_optional_collection_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greenConfirm"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Your Skip Is Arriving At 10am-12pm on Tue 28th Mar 2019"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="Select Collection Date:"
            android:textColor="@color/black"
            android:layout_weight="1" />

        <Button
            style="@style/YellowButton"
            android:id="@+id/date_display_button_collection_optional_choose_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="32dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Scroll and select collection time."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="(Heads up: This will be reset if you change the date)"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_choose_time_skip_arrival"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/skip_collection_time_and_date_text_view_optional_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Arriving Thu 31st Jan 2019, Select Time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Charge for 27 days hired:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/subtotal_hire_length_charge_optional_choose_collection_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="TOTAL PRICE"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TOTAL:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/total_price_optional_choose_collection_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="TOTAL PRICE"
            android:textSize="16sp"/>

    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/continue_button_optional_collection_date"
            android:background="@color/softerAmber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:text="Continue"/>

    </RelativeLayout>

</LinearLayout>